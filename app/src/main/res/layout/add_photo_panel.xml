<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/addTaskPhotoPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_photo" />

    <Button
        android:id="@+id/addTaskPhotoRetake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photoPanelDivider"
        android:layout_toLeftOf="@+id/photoPanelDivider"
        android:layout_toStartOf="@+id/photoPanelDivider"
        android:text="@string/addtask_photo_retake" />

    <Button
        android:id="@+id/addTaskPhotoDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/photoPanelDivider"
        android:layout_toEndOf="@+id/photoPanelDivider"
        android:layout_toRightOf="@+id/photoPanelDivider"
        android:text="@string/addtask_record_delete"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/photoPanelDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTaskPhotoPreview"
        android:layout_centerHorizontal="true" />
</RelativeLayout>